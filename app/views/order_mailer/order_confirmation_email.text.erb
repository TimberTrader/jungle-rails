<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>

  <body>

  <h1>Order #<%= @order.id %></h1>
  <h4>Thank you for your order!</h4>

  <table>
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
    <% @order_items = @order.line_items %>
    <% @order_items.each do | order_item | %>
      <tr>
        <td>
          <h4><%= order_item.product.name %></h4>
          <br>
          <p><%= order_item.product.description %></p>
        </td>
        <td>
          <%= order_item.quantity%>
        </td>
        <td>
          <%= order_item.total_price %>
        </td>
      </tr>
    <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">
          TOTAL:
        </th>
        <th>
          <%= @order.total %>
        </th>
      </tr>
    </tfoot>
  </table>

  </body>
</html>